<?xml version="1.0"?>
<config>
    <modules>
        <Payco_Payco>
            <version>1.9.0</version>
        </Payco_Payco>
    </modules>
    <frontend>
        <routers>
            <payco>
                <use>standard</use>
                <args>
                    <module>Payco_Payco</module>
                    <frontName>ePayco</frontName>
                </args>
            </payco>
        </routers>
    </frontend>
    <global>
        <models>
            <payco>
                <class>Payco_Payco_Model</class>
            </payco>
        </models>
        <resources>
            <payco_setup>
                <setup>
                    <module>Payco_Payco</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </payco_setup>
            <payco_write>
                <use>core_write</use>
            </payco_write>
            <payco_read>
                <use>core_read</use>
            </payco_read>
        </resources>
        <helpers>
            <payco>
                <class>Payco_Payco_Helper</class>
            </payco>
        </helpers>
        <blocks>
            <payco><class>Payco_Payco_Block</class></payco>
        </blocks>
    </global>

    <default>
        <payment>
            <payco>
                <active>1</active>
                <model>payco/payco</model>
                <order_status>1</order_status>
                <title>ePayco, Tarjeta de Credito, PSE, Recaudo en efectivo, SafetyPay</title>
                <p_cust_id_cliente />
                <p_key />
            </payco>
        </payment>
    </default>
</config>