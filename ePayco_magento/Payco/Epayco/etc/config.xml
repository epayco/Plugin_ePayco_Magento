<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <epayco>
                <payment_action>authorize</payment_action><!-- You can use another methor like capture  -->
                <model>Payco\Epayco\Model\PaymentMethod</model>
                <active>1</active>
                <title>ePayco Payment</title>
                <order_status>pending_payment</order_status><!-- set default order status-->
            </epayco>
        </payment>
    </default>
</config>